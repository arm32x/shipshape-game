<$# ShipShape  >  views  >  index  >  index                                  $>
<$# 	The home page of the website.                                        $>

<$- include('../header', { title: "Home" }); $>

<div class='shp-maps shp-card'>
	<header class='shp-card__header shp-card__header--outlined'>
		<i class='shp-card__icon material-icons'>map</i>
		<span class='shp-card__title'>Maps</span>
	</header>
	<div class='mdl-grid'>
		<$ for (let id in maps) { $>
			<div class='shp-map mdl-cell mdl-cell--4-col'>
				<div class='shp-map__image' style='background-image: url(<$- maps[id].thumbnail $>);'></div>
				<h4 class='shp-map__name'><$= maps[id].name $></h4>
				<span class='shp-map__id'><$= id $></span>
				<p class='shp-map__description'><$= maps[id].description $></p>
				<$ if (maps[id].ships.carrier * 5 + maps[id].ships.battleship * 4 + maps[id].ships.submarine * 3 + maps[id].ships.destroyer * 3 + maps[id].ships.patrolBoat * 2 > 20) { $>
					<p class='shp-warning'>This map is not recommended for mobile devices.</p>
				<$ } $>
			</div>
		<$ } $>
	</div>
	<div class='shp-map-create-button-container'>
		<$- helpers.navigationLink("Create map", '/maps/new', { type: 'contained', raised: true, icon: 'add', classes: [ 'shp-map-create-button' ] }) $>
	</div>
</div>

<$- include('../footer'); $>
